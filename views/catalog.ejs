<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Part Catalog</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    </link>
    <link href="/font/bootstrap-icons.min.css" rel="stylesheet">
    </link>
    <%- include('partials/navbar') %>
    <style>
        .dropdown-menu {
            max-height: 280px;
            overflow-y: auto;
        }
    </style>
</head>

<body>
    
    <div class="container-md" id="myDiv">
        <div class="row row-cols-1 row-cols-md-4 g-4">
            <% for(part of parts) { %>
                <div class="col">
                    <div class="card h-100 shadow-sm border-light mb-3">
                        <img src="<%= part.pictureURL %>" class="card-img-top" alt="...">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-capitalize fw-semibold">
                                <%= part.description %>
                            </h5>
                            <p class="card-text fs-5">
                                $<%= part.price %>
                            </p>
                            <div class="mt-auto">
                                <% if (part.quantity > 0) { %>
                                    <p class="card-text text-success fw-semibold">
                                        <%= part.quantity %> In Stock
                                    </p>                     
                                    <form action="/addToCart" method="post">     
                                        <input type="hidden" name="productId" value="<%= part.number %>">
                                        <% if (part.inCartQuantity > 0) { %>
                                            <div class="dropdown">
                                                <button class="btn btn-outline-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <%= part.inCartQuantity %> In Cart
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <% for (let i=0; i <=part.quantity; i++) { %>
                                                        <% if (i !=part.inCartQuantity) { %>
                                                            <li><button class="dropdown-item" type="submit" name="quantity" value="<%= i %>">
                                                                <%= i %>
                                                            </button></li>
                                                        <% } else{ %>
                                                            <li><button class="dropdown-item disabled" aria-disabled="true">
                                                                <%= i %> <i class="bi bi-check-lg"></i>
                                                            </button></li>
                                                        <% } %>
                                                    <% } %>
                                                </ul>
                                            </div>
                                        <% } else { %>
                                            <button type="submit" class="btn btn-primary" name="quantity" value="1">Add to Cart</button>
                                        <% } %>
                                    </form>
                                <% } else{ %>
                                    <button type="button" class="btn btn-primary" disabled>Sold Out</button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    <script src="/umd/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</body>

</html>